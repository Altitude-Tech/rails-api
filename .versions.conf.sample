##
# This is an example file for production usage
#
# See PRODUCTION_SETUP.md for more details
##

##
# Ruby/RVM config
##
ruby=2.3.0
ruby-gemset=api


##
# Environment variables
##
env-RAILS_ENV=production

# secret key generated by `rake secret`
env-SECRET_KEY_BASE=secret

# database user credentials
env-API_DATABASE_USER=api_user
env-API_DATABASE_PASSWORD=password

# database admin credentials
env-API_DATABASE_ADMIN=api_admin
env-API_DATABASE_ADMIN_PASSWORD=password
